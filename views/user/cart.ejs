                                <span>Quantity</span>
                            </div>
                            <div class="one-eight text-center">
                                <span>Total</span>
                            </div>

                            <div class="one-eight text-center px-4">
                                <span>Remove</span>
                            </div>
                        </div>


                        <% cart.items.forEach(item=> { %>
