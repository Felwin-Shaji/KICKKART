<%- include("../partials/user/header.ejs") -%>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">
    <style>
        body {
            font-family: Arial, sans-serif;
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        .sidebar {
            width: 100%;
            max-width: 300px;
            background-color: #f8f9fa;
            padding: 20px;
            border: 1px solid #ddd;
        }

        .sidebar h5 {
            font-size: 18px;
            margin-bottom: 10px;
            cursor: pointer;
        }

        .sidebar ul {
            list-style: none;
            padding-left: 0;
            display: none;
            /* Hide dropdown by default */
        }

        .sidebar ul li {
            margin: 5px 0;
        }

        .sidebar ul li a {
            text-decoration: none;
            color: #007bff;
        }

        .sidebar .price-filter {
            cursor: pointer;
            padding: 5px 0;
        }

        .breadcrumb {
            background: none;
            padding: 0;
        }

        .search-container {
            display: flex;
            align-items: center;
            margin-bottom: 20px;
        }

        .search-container i {
            margin-right: 10px;
        }

        .search-input {
            width: 100%;
            padding: 10px;
            border: 1px solid #ddd;
            border-radius: 5px;
        }

        .product-card {
            border: 1px solid #ddd;
            border-radius: 5px;
            overflow: hidden;
            background-color: #fff;
            margin-bottom: 20px;
        }

        .product-card img {
            width: 100%;
            height: auto;
        }

        .product-card .card-body {
            padding: 15px;
        }

        .star-rating i {
            color: #ffc107;
        }

        .discount-badge {
            background-color: #28a745;
            color: #fff;
            padding: 5px;
            border-radius: 5px;
            font-size: 14px;
        }

        .original-price {
            text-decoration: line-through;
            color: #6c757d;
        }

        .cart-button {
            background-color: #007bff;
            color: #fff;
            border: none;
            padding: 10px;
            border-radius: 5px;
            cursor: pointer;
        }

        .cart-button i {
            margin-right: 5px;
        }

        .pagination .btn {
            margin: 0 5px;
        }

        .pagination .btn.active {
            background-color: #007bff;
            color: #fff;
        }

        .product-card {
            border: 1px solid #ddd;
            border-radius: 10px;
            overflow: hidden;
            background-color: #fff;
            transition: transform 0.3s, box-shadow 0.3s;
        }

        .product-card:hover {
            transform: translateY(-10px);
            box-shadow: 0 10px 20px rgba(0, 0, 0, 0.1);
        }

        .product-card img {
            width: 100%;
            height: auto;
            border-bottom: 1px solid #ddd;
        }

        .product-card .card-body {
            padding: 15px;
        }

        .product-card .card-title {
            font-size: 16px;
            margin-bottom: 5px;
        }

        .product-card .card-title+.card-title {
            font-size: 14px;
            color: #6c757d;
        }

        .star-rating i {
            color: #ffc107;
        }

        .discount-badge {
            background-color: #28a745;
            color: #fff;
            padding: 3px 7px;
            border-radius: 5px;
            font-size: 12px;
        }

        .original-price {
            text-decoration: line-through;
            color: #6c757d;
            font-size: 14px;
        }

        .cart-button {
            background-color: #007bff;
            color: #fff;
            border: none;
            padding: 8px 12px;
            border-radius: 5px;
            cursor: pointer;
            transition: background-color 0.3s;
        }

        .cart-button:hover {
            background-color: #0056b3;
        }

        .wish-button {
            background-color: #fa2157;
            color: #fff;
            border: none;
            padding: 8px 12px;
            border-radius: 5px;
            cursor: pointer;
            transition: background-color 0.3s;
        }

        .wish-button:hover {
            background-color: #fa3465;
        }

        .parent-container {
            overflow: visible;
            /* Ensure modal is fully visible */
        }

        .modal-content {
            width: 90%;
            max-width: 400px;
            padding: 20px;
            background: transparent;
            /* Fully transparent background */
            color: #ffffff;
            border-radius: 8px;
            box-shadow: none;
            /* Remove shadow */
            text-align: center;
        }

        .variant-option {
            cursor: pointer;
            padding: 10px 15px;
            /* Adjust padding for better touch targets */
            border: 1px solid transparent;
            display: inline-block;
            margin: 5px;
            border-radius: 4px;
            font-size: 14px;
            /* Consistent font size */
            transition: all 0.3s ease;
            /* Smooth hover/selection transitions */
        }

        .variant-option:hover {
            border-color: #007bff;
            /* Highlight on hover */
            background-color: rgba(0, 123, 255, 0.1);
            /* Subtle background color */
        }

        .variant-option.selected {
            background-color: #007bff;
            /* Highlight selected option */
            color: #fff;
            border-color: #007bff;
        }

        /* Modal transparency adjustments */
        .modal {
            background: rgba(0, 0, 0, 0.5);
            /* Transparent background with a subtle black overlay */
        }

        .modal-dialog {
            display: flex;
            align-items: center;
            justify-content: center;
            min-height: 100vh;
            /* Center vertically */
        }

        .modal-header,
        .modal-footer {
            background: rgba(0, 0, 0, 0.8);
            /* Slightly darkened background for header and footer */
            border: none;
            /* Remove default borders */
        }

        .modal-title {
            color: #ffffff;
            /* Ensure title is visible on transparent background */
        }

        @media (max-width: 768px) {
            .sidebar {
                width: 100%;
            }
        }
    </style>

    <body>
        <div class="container-fluid"> <!-- Breadcrumb -->
            <nav aria-label="breadcrumb" class="mt-3">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item"><a href="#" class="text-decoration-none">Home</a></li>
                    <li class="breadcrumb-item active">Shop</li>
                </ol>
            </nav> <!-- Search Bar -->
            <div class="search-container"> <i class="bi bi-search"></i> <input type="text" class="search-input"
                    placeholder="Search for items..."> </div>
            <div class="row"> <!-- Sidebar -->
                <div class="col-12 col-md-2">
                    <div class="sidebar"> <!-- Categories -->
                        <h5 id="category-heading">Category</h5>
                        <ul id="category-list">
                            <% for(let i=0; i < category.length; i++) { %>
                                <li><a href="/filter?category=<%= category[i]._id %>">
                                        <%= category[i].name %>
                                    </a></li>
                                <% } %>
                        </ul> <br> <!-- Brands -->
                        <h5 id="brand-heading">Brands</h5>
                        <ul id="brand-list">
                            <% for(let i=0; i < brand.length; i++) { %>
                                <li><a href="/filter?brand=<%= brand[i]._id %>">
                                        <%= brand[i].brandName %>
                                    </a></li>
                                <% } %>
                        </ul> <br> <!-- Price Filters -->
                        <h5 id="price-heading">Filter by Price</h5>
                        <ul id="price-list">
                            <li><a href="#">Below 20,000</a></li>
                            <li><a href="#">20,000 - 25,000</a></li>
                            <li><a href="#">25,000 - 30,000</a></li>
                            <li><a href="#">Above 30,000</a></li>
                        </ul>
                    </div>
                </div>
                <!-- Main Content -->
                <div class="col-12 col-md-10"> <!-- Products Grid -->
                    <div class="row g-4"> <!-- Product Card -->
                        <% for(let i=0;i<products.length;i++){ %>
                            <div class="col-md-6 col-lg-3">
                                <div class="product-card">
                                    <div class="position-relative"> <span class="hot-badge"></span> <a
                                            href="/productDetails?id=<%=products[i]._id %>"> <img
                                                src="/uploads/re-image/<%= products[i].productImage[0] %>"
                                                class="card-img-top" alt="<%= products[i].productName %>"> </a> </div>
                                    <div class="card-body">
                                        <h5 class="card-title">
                                            <%= products[i].brand %>
                                        </h5>
                                        <h6 class="card-title">
                                            <%= products[i].productName %>
                                        </h6>
                                        <div class="d-flex align-items-center mb-2">
                                            <div class="star-rating me-2"> <i class="bi bi-star-fill"></i> <i
                                                    class="bi bi-star-fill"></i> <i class="bi bi-star-fill"></i> <i
                                                    class="bi bi-star-fill"></i> <i class="bi bi-star-fill"></i> </div>
                                            <span class="discount-badge">17% Off</span>
                                        </div>
                                        <div class="d-flex justify-content-between align-items-center">
                                            <div> <span class="h5 mb-0">
                                                    <%= Number(products[i].salePrice).toLocaleString("en-IN") %>
                                                </span> <span class="original-price ms-2">
                                                    <%= Number(products[i].regularPrice).toLocaleString("en-IN") %>
                                                </span>
                                            </div>

                                            <!-- <button class="cart-button"><i
                                                    class="bi bi-cart-plus"></i></button> -->

                                            <!-- Cart Button -->
                                            <% if (!locals.user) { %>
                                                <a href="/login">
                                                    <button class="cart-button">
                                                        <i class="bi bi-cart-plus"></i>
                                                    </button>
                                                </a>
                                                <%}else{ %>
                                                    <button class="cart-button" data-product-id="<%= products[i]._id %>"
                                                        data-bs-toggle="modal" data-bs-target="#sizeModal-<%= i %>">
                                                        <i class="bi bi-cart-plus"></i>
                                                    </button>
                                                    <% } %>

                                                        <button class="wish-button"><i
                                                                class="fa-regular fa-heart"></i></button>

                                        </div>
                                    </div>
                                </div>
                            </div>

                            <!-- Modal Structure -->
                            <div id="sizeModal-<%= i %>" class="modal" tabindex="-1">
                                <div class="modal-dialog">
                                    <div class="modal-content">
                                        <div class="modal-header">
                                            <h4 class="modal-title">Select Size</h4>
                                            <button type="button" class="btn-close" data-bs-dismiss="modal"
                                                aria-label="Close"></button>
                                        </div>
                                        <div class="modal-body">
                                            <div class="size-wrap">
                                                <div class="block-26 mb-2">
                                                    <h5>Available Sizes</h5>
                                                    <ul class="size-options">
                                                        <% products[i].variants.forEach(({ size })=> { %>
                                                            <li class="variant-option" data-size="<%= size %>">
                                                                <%= size %>
                                                            </li>
                                                            <% }); %>
                                                    </ul>
                                                </div>
                                            </div>
                                        </div>
                                        <div class="modal-footer">
                                            <button id="modalOkButton-<%= i %>" class="btn btn-primary modal-ok"
                                                data-product-id="<%= products[i]._id %>">OK</button>
                                            <button type="button" class="btn btn-secondary"
                                                data-bs-dismiss="modal">Cancel</button>
                                        </div>
                                    </div>
                                </div>
                            </div>

                            <% } %>
                    </div> <!-- Pagination -->
                    <div class="pagination">
                        <% if (currentPage> 1) { %> <a class="btn" href="/shope?page=<%= currentPage - 1 %>">Prev</a>
                            <% } %>
                                <% for (let i=1; i <=totalpages; i++) { %> <a
                                        class="btn <%= currentPage === i ? 'active' : '' %>"
                                        href="/shope?page=<%= i %>">
                                        <%= i %>
                                    </a>
                                    <% } %>
                                        <% if (currentPage < totalpages) { %> <a class="btn"
                                                href="/shope?page=<%= currentPage + 1 %>">Next</a>
                                            <% } %>
                    </div>
                </div>
            </div>
        </div>
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
        <script>
            document.getElementById('category-heading').onclick = function () {
                var categoryList = document.getElementById('category-list');
                categoryList.style.display = categoryList.style.display === 'none' ? 'block' : 'none';
            };
            document.getElementById('brand-heading').onclick = function () {
                var brandList = document.getElementById('brand-list');
                brandList.style.display = brandList.style.display === 'none' ? 'block' : 'none';
            };
            document.getElementById('price-heading').onclick = function () {
                var priceList = document.getElementById('price-list');
                priceList.style.display = priceList.style.display === 'none' ? 'block' : 'none';
            };

            document.addEventListener("DOMContentLoaded", () => {

                document.querySelectorAll('.cart-button').forEach((button, index) => {
                    button.addEventListener('click', function () {
                        const productId = this.dataset.productId;
                        const modal = document.getElementById(`sizeModal-${index}`);
                        const okButton = modal.querySelector(`#modalOkButton-${index}`);
                        const closeButton = modal.querySelector('.btn-close');
                        let selectedSize = null;

                        // Show modal using Bootstrap
                        const bootstrapModal = new bootstrap.Modal(modal);
                        bootstrapModal.show();

                        // Handle size selection
                        modal.querySelectorAll('.variant-option').forEach(option => {
                            option.addEventListener('click', function () {
                                modal.querySelectorAll('.variant-option').forEach(opt => opt.classList.remove('selected'));
                                this.classList.add('selected');
                                selectedSize = this.dataset.size;
                            });
                        });

                        // OK button logic
                        okButton.addEventListener('click', async () => {
                            if (selectedSize) {
                                try {
                                    const response = await fetch('/cart', {
                                        method: 'POST',
                                        headers: { 'Content-Type': 'application/json' },
                                        body: JSON.stringify({ productId, selectedSize, quantity: 1 }),
                                    });
                                    if (response.ok) {

                                        Swal.fire({
                                            icon: 'success',
                                            title: 'Success!',
                                            text: 'Item added to cart successfully!',
                                            showConfirmButton: false,
                                            timer: 1500,
                                        }).then(() => {

                                            location.reload();
                                        });
                                        bootstrapModal.hide();
                                    } else {
                                        Swal.fire({
                                            icon: 'error',
                                            title: 'Error!',
                                            text: 'Failed to add item to cart.',
                                        });
                                    }
                                } catch (error) {
                                    console.error('Error:', error);
                                    Swal.fire({
                                        icon: 'error',
                                        title: 'Error!',
                                        text: 'An unexpected error occurred.',
                                    });
                                }
                            } else {
                                Swal.fire({
                                    icon: 'warning',
                                    title: 'Oops...',
                                    text: 'Please select a size before proceeding!',
                                });
                            }
                        });

                        // Close button logic
                        closeButton.addEventListener('click', () => {
                            bootstrapModal.hide();
                        });
                    });
                });


            });
        </script>



