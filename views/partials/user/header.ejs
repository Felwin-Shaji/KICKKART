    <style>
        body{
            background: #ebeaea;
        }

        input{
            color: #000000;
        }
        /* Custom styles for dark navbar */
        .navbar {
            background-color: #333;
            /* Dark background */
            box-shadow: 0 2px 4px rgba(161, 161, 161, 0.5);
            /* Slight shadow for depth */
        }

        .navbar-brand {
            font-size: 1.5rem;
            font-weight: bold;
            color: #dfefff;
            /* Light text for the brand */
        }

        .navbar-brand:hover {
            color: #007bff;
            /* Highlight color for the brand on hover */
        }

        .nav-link {
            color: #f8f9fa;
            /* Light text for navigation links */
            transition: color 0.3s ease;
        }

        .nav-link:hover {
            color: #007bff;
            /* Highlight color on hover */
        }

        .form-control {
            background-color: #444;
            /* Dark background for input */
            color: #000000;
            /* Light text for input */
            border: 1px solid #555;
            /* Subtle border */
        }


        .form-control:focus {
            box-shadow: none;
            border-color: #007bff;
            /* Highlight border on focus */
            background-color: #555;
            /* Slightly lighter background on focus */
            color: #000000;
        }

        .btn-outline-primary {
            border-color: #000000;
            /* Border color for buttons */
            color: #000000;
            /* Text color for buttons */
        }

        .btn-outline-primary:hover {
            background-color: #007bff;
            /* Button background on hover */
            color: #fff;
            /* Text color on hover */
        }

        .dropdown-menu {
            background-color: #444;
            /* Dark background for dropdown */
            border: none;
            box-shadow: 0 0.5rem 1rem rgba(0, 0, 0, 0.5);
            /* Shadow for depth */
        }

        .dropdown-item {
            color: #f8f9fa;
            /* Light text for dropdown items */
        }

        .dropdown-item:hover {
            background-color: #007bff;
            /* Highlight background on hover */
            color: #fff;
            /* Light text on hover */
        }

        .sticky-top {
            position: sticky;
            top: 0;
            z-index: 1020;
            background-color: #333;
            /* Ensures consistent dark background */
        }
    </style>
</head>

<body>
    <header class="sticky-top">
        <nav class="navbar navbar-expand-lg navbar-light bg-white py-3">
            <div class="container">
                <a class="navbar-brand" href="/">KICKKART</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarContent"
                    aria-controls="navbarContent" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarContent">
                    <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                        <li class="nav-item">
                            <a class="nav-link " aria-current="page" href="/">Home</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="/shope">Shop</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="/about">About</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="/contact">Contact</a>
                        </li>
                    </ul>
                    <!-- <form class="d-flex me-3 mb-2 mb-lg-0">
                        <input class="form-control me-2" type="search" placeholder="Search" aria-label="Search">
                        <button class="btn btn-outline-primary" type="submit">
                            <i class="bi bi-search"></i>
                        </button>
                    </form> -->
                    <div class="d-flex align-items-center mb-2 mb-lg-0">
                        <a href="/cart" class="btn btn-outline-primary me-2">
                            <i class="bi bi-cart"></i>
                        </a>
                        <a href="/wishlist" class="btn btn-outline-primary me-2">
                            <i class="bi bi-heart"></i>
                        </a>
                        <div class="dropdown">
                            <button class="btn btn-outline-primary dropdown-toggle" type="button" id="userDropdown"
                                data-bs-toggle="dropdown" aria-expanded="false">
                                <% if (!locals.user) { %>
                                    <i class="bi bi-person-circle"></i>
                                    <% }else{ %>
                                        <i class="bi bi-person-circle">
                                            <%= locals.user.name%>
                                        </i>
                                        <% } %>
                            </button>
                            <ul class="dropdown-menu dropdown-menu-end" aria-labelledby="userDropdown">
                                <% if (!locals.user) { %>
                                    <li><a class="dropdown-item" href="/login">Login</a></li>
                                    <li><a class="dropdown-item" href="/signup">Sign Up</a></li>
                                    <% }else{ %>
                                        <li>
                                            <hr class="dropdown-divider">
                                        </li>
                                        <li><a class="dropdown-item" href="/userProfile">Profile</a></li>
                                        <li><a class="dropdown-item" id="logout" href="/logout">Logout</a></li>
                                        <% } %>
                            </ul>
                        </div>
                    </div>
                </div>
            </div>
        </nav>
    </header>

    
