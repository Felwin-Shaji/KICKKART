<style>
	/* Dropdown styling */
	.dropdown {
		position: relative;
		display: inline-block;
	}

	.dropdown .dropdown-toggle {
		color: white;
		font-size: 14px;
		font-weight: bold;
		background-color: #007bff;
		/* Bootstrap info color */
		border: none;
		padding: 8px 16px;
		border-radius: 4px;
		text-transform: capitalize;
		cursor: pointer;
		transition: background-color 0.3s ease;
	}

	.dropdown .dropdown-toggle:hover {
		background-color: #0056b3;
		/* Darker shade for hover effect */
	}

	.dropdown-content {
		display: none;
		position: absolute;
		background-color: #2690fa;
		min-width: 180px;
		box-shadow: 0 8px 16px rgba(0, 0, 0, 0.1);
		border-radius: 4px;
		overflow: hidden;
		right: 0;
		z-index: 1000;
	}

	.dropdown-content a,
	.dropdown-content button {
		color: #ffffff;
		padding: 12px 16px;
		text-decoration: none;
		display: block;
		font-size: 14px;
		transition: background-color 0.2s ease, color 0.2s ease;
		width: 100%;
		text-align: left;
		border: none;
		background: none;
		cursor: pointer;
	}

	.dropdown-content a:hover,
	.dropdown-content button:hover {
		background-color: #7abcff;
		/* Light gray hover effect */
		color: #ffffff;
	}

	.dropdown:hover .dropdown-content {
		display: block;
	}

	/* Logout button alignment */
	.dropdown-content form {
		margin: 0;
		padding: 0;
	}

	/* Auth buttons styling */
	.auth-buttons a button {
		font-size: 14px;
		font-weight: bold;
		color: white;
		background-color: #007bff;
		/* Bootstrap info color */
		border: none;
		padding: 8px 16px;
		border-radius: 4px;
		cursor: pointer;
		margin-right: 8px;
		transition: background-color 0.3s ease, box-shadow 0.2s ease;
	}

	.auth-buttons a button:hover {
		background-color: #0056b3;
		box-shadow: 0px 4px 8px rgba(0, 0, 0, 0.2);
	}

	.dropdown-toggle {
		display: inline-flex;
		align-items: center;
		color: white;
		font-size: 14px;
		font-weight: bold;
		background-color: #007bff;
		border: none;
		padding: 8px 16px;
		border-radius: 4px;
		text-transform: capitalize;
		cursor: pointer;
		transition: background-color 0.3s ease;
	}

	.dropdown-toggle svg {
		margin-left: 8px;
		/* Add some space between the text and the icon */
		fill: white;
		/* Match icon color with the button text */
	}

	.menu-1 {
		display: flex;
		justify-content: space-between;
		align-items: center;
		position: -webkit-sticky;
		position: sticky;
		top: 0;
		background-color: white;
		z-index: 1000;
		padding: 10px 0;
	}

	.menu-1 ul {
		display: flex;
		list-style: none;
		padding-left: 0;
		margin: 0;
	}

	.menu-1 ul li {
		margin-right: 15px;
	}

	.search-wrap {
		display: flex;
		align-items: center;
	}

	.search-wrap .form-group {
		display: flex;
		align-items: center;
	}

	.cart {
		display: flex;
		align-items: center;
		margin-left: 10px;
	}
</style>
